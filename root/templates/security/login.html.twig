{% extends 'base.html.twig' %}

{% set title = 'Форма входа' %}

{% block header_title %}{{ title }}{% endblock %}

{% block title %}
    {{ title }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <h2>{{ title }}</h2>
    <form method="post">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Email</label>
            <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" value="{{ last_username }}" name="email">
        </div>

        <div class="mb-3">
            <label for="inputPassword" class="form-label">Пароль</label>
            <input type="password" class="form-control" id="inputPassword" aria-describedby="emailHelp" name="password">
        </div>

        <input type="hidden" name="_csrf_token"
               value="{{ csrf_token('authenticate') }}"
        >

        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <div class="mb-3">
            <button class="btn btn-primary" type="submit">Войти</button>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
